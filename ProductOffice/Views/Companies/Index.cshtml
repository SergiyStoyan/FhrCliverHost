@model IEnumerable<Cliver.ProductOffice.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Companies</h2>

    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CrawlerId)
                </th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script type="text/javascript">
        init_table({
            server_side: true,
            id_column_id: 0,
            request_path:"@Request.Path",
            invisible_column_ids: [0],
            default_actions_prefix: null,
            rowCallback: "default_rowCallback",
            menu: {
                above: [
                    { text: "New", onclick: "default_new" },
                ],
                left: [
                    { text: "X", onclick: "default_delete", style: "default_delete" },
                ],
                right: [
                    { text: "Details", onclick: "default_details" },
                    { text: "Edit", onclick: "default_edit" }
                ]
            }
        });
    </script>
